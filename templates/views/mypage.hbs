<div class="container">
    {{#if customer}}
    <hr class="mv-2">
    <br><br>
    <h1 class="textstyle">Welcome to {{customer.name.first}}'s page</h1>
    <hr class="mv-2">

    <form method="post" enctype="multipart/form-data" autocomplete="off" novalidate="" class="form-horizontal">
        <input type="hidden" name="action" value="profile.details">
        <div class="form-group">
            <label class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <div class="form-row">
                    <div class="col-xs-6">
                        <input type="text" name="name.first" value="{{customer.name.first}}" class="form-control">
                    </div>
                    <div class="col-xs-6"><input type="text" name="name.last" value="{{customer.name.last}}" class="form-control"></div>
                </div>
            </div>

        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                <div class="col-xs-6">
                    <input type="email" name="email" value="{{customer.email}}" class="form-control"></div>
            </div>
        </div>
        <hr class="mv-2">

        <div class="form-group">
            <label class="col-sm-2 control-label">Address1</label>
            <div class="col-sm-10">
                <div class="col-xs-10">
                    <input type="text" name="address1" value="{{customer.address.address1}}" class="form-control"></div>
            </div>

        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Address2</label>
            <div class="col-sm-10">
                <div class="col-xs-10">
                    <input type="text" name="address2" value="{{customer.address.address2}}" class="form-control"></div>
            </div>


        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">City</label>
            <div class="col-sm-10">
                <div class="col-xs-4">
                    <input type="text" name="city" value="{{customer.address.city}}" class="form-control"></div>
            </div>


        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">State</label>
            <div class="col-sm-10">
                <div class="col-xs-4">
                    <input type="text" name="state" value="{{customer.address.state}}" class="form-control"></div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Zipcode</label>
            <div class="col-sm-10">
                <div class="col-xs-3">
                    <input type="number" name="zip" value="{{customer.address.zipcode}}" class="form-control"></div>
            </div>
        </div>

        <button type="submit" data-loading-text="Saving..." class="btn btn-primary btn-right">Save profile</button>
        <br><br>
        <hr class="mv-2">


        <div class="form-group">
            <label class="col-sm-2">Do you want to change your password?</label>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary btn-right">Change Password</button>
            </div>



            {{/if}}
        </div>



    </form>
</div>