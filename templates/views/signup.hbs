<div class="container">
  <hr calss="mv-2">
  <br><br>
  <h1 class="textstyle">Welcome to Cuple</h1>
  <hr class="mv-2">

  <form method="post" enctype="multipart/form-data" name="signUpForm" action='/signup' autocomplete="off" novalidate=""
    class="form-horizontal">
    {{#if messages.warning}}
    <div class="alert alert-danger flash-message">
      {{messages.warning}}
    </div>
    {{/if}}

    <div class="alert alert-danger form-error-message"></div>

    <input type="hidden" name="action" value="profile.details">
    <div class="form-group">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <div class="form-row">
          <div class="col-xs-6">
            <input type="text" name="firstName" class="form-control" placeholder="First Name">
          </div>
          <div class="col-xs-6"><input type="text" name="lastname" class="form-control" placeholder="Last Name"></div>
        </div>
      </div>

    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <div class="col-xs-6">
          <input type="email" name="emailAddress" class="form-control" placeholder="Email"></div>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
        <div class="col-xs-6">
          <input type="password" name="password" class="form-control" placeholder="Password"></div>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Confirm Password</label>
      <div class="col-sm-10">
        <div class="col-xs-6">
          <input type="password" name="password_re" class="form-control" placeholder="Confirm Password"></div>
      </div>
    </div>

    <hr class="mv-2">

    <div class="form-group">
      <label class="col-sm-2 control-label">Address1</label>
      <div class="col-sm-10">
        <div class="col-xs-10">
          <input type="text" name="address" class="form-control" placeholder="Address1"></div>
      </div>

    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Address2</label>
      <div class="col-sm-10">
        <div class="col-xs-10">
          <input type="text" name="address2" class="form-control" placeholder="Address2">
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">City</label>
      <div class="col-sm-10">
        <div class="col-xs-4">
          <input type="text" name="city" class="form-control" placeholder="City"></div>
      </div>


    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">State</label>
      <div class="col-sm-10">
        <div class="col-xs-4">
          <input type="text" name="state" class="form-control" placeholder="State"></div>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Zipcode</label>
      <div class="col-sm-10">
        <div class="col-xs-3">
          <input type="number" name="zip" class="form-control" placeholder="zip"></div>
      </div>
    </div>
    <button type="submit" data-loading-text="Creating..." class="btn btn-primary btn-right">create profile</button>
    <br><br>
    <hr class="mv-2">
  </form>
  <br>
  <p style="text-align: center; color:gray; font-size:13px;">by signing up, you accept the <a href="/">terms of
      use</a> and <a href="/">privacy policy</a> </p>
  <br>
  <p style="font-size:13px; text-align: center;">already on account?
    <a href="/login">Here</a>

  </p>
  <br><br>

</div>